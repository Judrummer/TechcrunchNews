<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_news_card_margin"
    android:layout_marginLeft="@dimen/item_news_card_margin"
    android:layout_marginRight="@dimen/item_news_card_margin"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >

        <ImageView
            android:id="@+id/ivItemNewsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvItemNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_news_title_padding"
            android:paddingLeft="@dimen/item_news_title_padding"
            android:paddingRight="@dimen/item_news_title_padding"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/item_news_title_text_size"
            android:textStyle="bold"
            tools:text="testText" />

        <TextView
            android:id="@+id/tvItemNewsDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_news_description_padding"
            android:textSize="@dimen/item_news_description_text_size"
            tools:text="testText testText testText testText testText testText testText testText testText" />

    </LinearLayout>

</android.support.v7.widget.CardView>
