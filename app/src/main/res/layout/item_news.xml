<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/item_news_root_padding">

    <ImageView
        android:id="@+id/ivItemNewsImage"
        android:layout_width="@dimen/item_news_image_size"
        android:layout_height="@dimen/item_news_image_size" />

    <TextView
        android:id="@+id/tvItemNewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_news_title_padding"
        android:textSize="@dimen/item_news_title_text_size"
        tools:text="testText" />

</LinearLayout>